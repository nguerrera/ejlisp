{
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "newLine": "LF",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "es2020",
    "types": ["node", "mocha"]
  },
  "exclude": ["dist", "node_modules/**"]
}
